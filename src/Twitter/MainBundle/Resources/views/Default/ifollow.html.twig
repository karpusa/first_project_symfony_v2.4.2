{% extends 'TwitterMainBundle:Default:index_user.html.twig' %}

{% block javascripts %}
{% endblock %}


{% block content %}
            <div class="row">    
                <h1>Слежу</h1>      
                {% if not ifollow_items %}  
                <p>Пока я не слежу!</p>
                {% else %}
                {% for ifollow in ifollow_items %}
                <div class="list-group">                     
                        <div class="list-group-item">
                           <h4 class="list-group-item-heading"><a href="{{ path('twitter_main_homepage', {'twittername': ifollow.user.usernameCanonical}) }}">{{ifollow.user.username}}</a></h4>
                        </div>                 
                </div>
                {% endfor %}
                {% endif %}                 
            </div>
{% endblock %}

